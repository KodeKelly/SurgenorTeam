<!-- LOGIN FORM -->
<div class="col-lg-4">
  <div id="login-form" class="card bg-transparent text-center card-form">
    <div class="card-body">
      <h3>Registration</h3>
      <p>Enter users info to register</p>
      <form method="post" action="/users/register">

        <div class="form-group">
          <input type="email" name="email" class="form-control form-control-lg" placeholder="Email" value="{{email}}"
            required>
        </div>

        <div class="form-group">
          <input type="password" name="password" class="form-control form-control-lg" placeholder="Password"
            value="{{password}}" required>
        </div>

        <div class="form-group">
          <input type="password" name="password2" class="form-control form-control-lg" placeholder="Confirm Password"
            value="{{password2}}" required>
        </div>

        <input type="submit" value="Submit" class="btn btn-outline-light btn-block" />
      </form>
    </div>
  </div>
</div>